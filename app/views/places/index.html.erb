<h1>Welcome to Indulge App -Love Local Food !</h1>



<br>
<div class="flickr_pagination col-xs-10 col-xs-offset-1">
	<%= will_paginate @places, previous_label: "<<", next_label: ">>" %>
</div>

<% @places.each do	|place| %>
<div class="booyah-box col-xs-10 col-xs-offset-1">

	<h1><%= link_to place.name, place_path(place) %></h1>
	<i><%= place.address %></i><br /><br />
	<p><%= place.description %></p><br />

	<% if place.user.present? %>
	<small><%= place.user.email %></small>
	<!-- <p>why no email prining here ?</p> -->
	<% end %>


	<% if place.comments.present? %>
	<div class="col-xs-12">
		<blockquote>
			<% if place.comments.first.humanized_rating.present? %>
			<b><%= place.comments.first.humanized_rating %></b> -
			<% end %>
			<%= place.comments.first.message %>
			<small><%= place.comments.first.user.email %></small>

		</blockquote>
	</div>
	<% end %>

<!-- Display the latest pic added in thumbnail and link it to POST -->
	<% if place.photos.present? %>
	<div>
		<br>

	<%= link_to 'Latest Photo for this place', place_path(place) %>
	<%= link_to(image_tag(place.photos.last.picture, :class => "img-responsive img-thumb"), place_path(place)) %>
	<!-- 	<%= image_tag(place.photos.last.picture, :class => "img-responsive img-thumb") %> -->
	</div>
	<% end %>

</div>
<% end %>


<div class="flickr_pagination col-xs-10 col-xs-offset-1">
	<%= will_paginate @places %>
</div>


